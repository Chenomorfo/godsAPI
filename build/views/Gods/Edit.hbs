
<div class="col-md-6 mx-auto">
<form action="/god/edit/{{god._id}}?_method=PUT" method="post">
<input type="hidden" name="_method" value="PUT">
        <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Name</label>
  <input name="name" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Name of God" value="{{god.name}}">
</div>
    <div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Represents</label>
  <input name="represent" type="text" class="form-control" id="exampleFormControlInput1" placeholder="God's Represents" 
  value="{{god.represent}}">
</div>
<div class="mb-3">
  <label for="exampleFormControlTextarea1" class="form-label">Description of the God</label>
  <textarea name="description" class="form-control" id="exampleFormControlTextarea1" rows="8">{{god.description}}</textarea>
</div>
<div class="mb-3">
  <label for="exampleFormControlInput1" class="form-label">Picture URL</label>
  <input name="picUrl" type="text" class="form-control" id="exampleFormControlInput1" placeholder="Picture URL" value="{{god.picUrl}}">
</div>
<div class="d-grid">
<button type="submit" class="btn btn-outline-primary">Register God!</button>
</div>
</form>
</div>