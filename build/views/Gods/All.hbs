<div class="row">

  {{#each gods}}
    <style>
      img{ width: 100%; height: 350px; object-fit: cover; object-position: top;
      }
    </style>
    <div class="col-md-3 mt-2">
      <div class="card">
        <div class="card-body">
          <img src="{{picUrl}}" />
        </div>
        <h3 class="card-header">{{name}}</h3>
        <h6 class="card-header">{{represent}}</h6>
      </div>
      <div class="d-flex gap-5  mx-auto">
  <a href="/god/edit/{{_id}}" class="btn btn-outline-secondary col-5" type="button">Edit</a>
  <form action="god/delete/{{_id}}?_method=DELETE" class="col-12" method="post">
  <input type="hidden" name="_method" value="DELETE">
     <button class="btn btn-outline-danger col-5" type="submit">Delete</button>
  </form>
</div>
    </div>
  {{/each}}

</div>